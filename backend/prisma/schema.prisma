generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int       @id @default(autoincrement())
  name               String
  email              String    @unique
  passwordHash       String
  avatarUrl          String?
  resetToken         String?   @unique
  resetTokenExpires  DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
}
